<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Curso Rails</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to 'Entradas', entradas_path %></li>
            <li><%= link_to 'Usuarios', seguridad_usuarios_path %></li>
            <li><%= link_to 'Categorias', categories_path %></li>
            <li><%= link_to 'Ayuda', ayuda_index_path %></li>
            <% if seguridad_usuario_signed_in? %>
              <li><%= link_to current_seguridad_usuario.username, seguridad_usuario_path(current_seguridad_usuario) %></li>
              <li><%= link_to 'salir', destroy_seguridad_usuario_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to 'Iniciar SesiÃ³n', new_seguridad_usuario_session_path %></li>
              <li><%= link_to 'Registrarse', new_seguridad_usuario_registration_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container-fluid" style="margin-top: 60px; margin-bottom: 40px;">
      <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
          <%= yield %>
        </div>
        <div class="col-sm-1"></div>
      </div>
    </div>

    <%= render 'layouts/shared/footer' %>

  </body>
</html>
