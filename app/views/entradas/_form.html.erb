<%= form_for(@entrada) do |f| %>
  <% if @entrada.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entrada.errors.count, "error") %> prohibited this entrada from being saved:</h2>

      <ul>
      <% @entrada.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :fecha, class: 'control-label' %><br>
    <%= f.date_select :fecha, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :titulo, class: 'control-label' %><br>
    <%= f.text_field :titulo, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :texto, class: 'control-label' %><br>
    <%= f.text_area :texto, class: 'form-control', rows: 6 %>
  </div>
  <div class="form-group">
    <%= f.label :visitas, class: 'control-label' %><br>
    <%= f.number_field :visitas, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :publicado, class: 'control-label' %><br>
    <%= f.check_box :publicado %>
  </div>
  <div class="form-group">
    <%= f.label :category_id, class: 'control-label' %><br>
    <%= f.select :category_id, Category.all.collect { |u| [ u.nombre, u.id ] },
                 { include_blank: false }, { class: 'form-control' } %>
  </div>
  <div class="actions">
    <%= f.submit 'Guardar', class: 'btn btn-primary' %>
  </div>
<% end %>
