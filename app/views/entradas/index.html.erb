<h1>Lista De Entradas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Titulo</th>
      <th>Publicado</th>
      <th>Usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entradas.each do |entrada| %>
      <tr>
        <td><%= entrada.fecha %></td>
        <td><%= entrada.titulo.truncate(80) %></td>
        <td><%= entrada.publicado ? 'Si' : 'No' %></td>
        <td><%= entrada.seguridad_usuario.username %></td>
        <td>
          <p data-placement="top" data-toggle="tooltip" title="Ver">
            <%= link_to entrada, class: 'btn btn-primary btn-xs' do %>
              <span class="glyphicon glyphicon-eye-open"></span>
            <% end %>
          </p>
        </td>
        <td>
          <p data-placement="top" data-toggle="tooltip" title="Editar">
            <%= link_to edit_entrada_path(entrada), class: 'btn btn-primary btn-xs' do %>
              <span class="glyphicon glyphicon-pencil"></span>
            <% end %>
          </p>
        </td>
        <td>
          <p data-placement="top" data-toggle="tooltip" title="Eliminar">
            <%= link_to entrada, class: 'btn btn-primary btn-xs', method: :delete, data: { confirm: 'Esta seguro?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
            <% end %>
          </p>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Entrada', new_entrada_path %>
