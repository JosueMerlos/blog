<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-4"></div>
  <div class="col-sm-4">
    <h1>Lista De Categorias</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Nombre</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.nombre %></td>
            <td>
              <p data-placement="top" data-toggle="tooltip" title="Ver">
                <%= link_to category, class: 'btn btn-primary btn-xs' do %>
                  <span class="glyphicon glyphicon-eye-open"></span>
                <% end %>
              </p>
            </td>
            <td>
              <p data-placement="top" data-toggle="tooltip" title="Editar">
                <%= link_to edit_category_path(category), class: 'btn btn-primary btn-xs' do %>
                  <span class="glyphicon glyphicon-pencil"></span>
                <% end %>
              </p>
            </td>
            <td>
              <p data-placement="top" data-toggle="tooltip" title="Eliminar">
                <%= link_to category, class: 'btn btn-primary btn-xs', method: :delete, data: { confirm: 'Esta seguro?' } do %>
                  <span class="glyphicon glyphicon-trash"></span>
                <% end %>
              </p>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Nueva Categoria', new_category_path %>

  </div>
  <div class="col-sm-4"></div>
</div>

